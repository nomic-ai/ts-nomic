{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2020",
    "lib": [
      "es2020",
      "DOM"
    ],
    "paths": {
      "*": [
        "src/*"
      ],
      "@types/*": [
        "types/*"
      ]
    },
    "target": "es2020",
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "strict": true,
    "declaration": true
  },
  "include": [
    "global.d.ts",
    "src/global.d.ts",
    "src/**/*.ts"
  ]
}